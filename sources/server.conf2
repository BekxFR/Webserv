server {
	server_name webserv.com;
		listen 8080;
		root ./site/;
		index index.html;
		client_max_body_size 2M;
		error_page 404 site/42.jpg 405 error.html 406 e;
		add_header Set-Cookie "my_cookie=123; Path=/; Mathieu=Gruson;";
		allow_methods GET POST;

		location /download/ {
			limit_except POST {
				deny all;
			}
			index indexr.html;
			root ./site/;
			autoindex off;
		}
}